<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddressActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Enter Location"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/id_edittext_address_address"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/id_button_address_continue"
        android:text="Continue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="addressContinue"
        android:layout_weight="1" />

    <Button
        android:id="@+id/id_button_address_current"
        android:text="Use Current Location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="addressCurrent"
        android:layout_weight="1" />

    <Button
        android:id="@+id/id_button_address_cancel"
        android:text="Cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="cancel"
        android:layout_weight="1" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfirmationActivity">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/id_text_confirmation_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/id_text_confirmation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/id_text_confirmation_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/id_button_confirmation_continue"
        android:text="continue"
        android:onClick="pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="80"/>

    <Button
        android:id="@+id/id_button_confirmation_return"
        android:text="Return"
        android:onClick="done"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="80"/>

</LinearLayout>